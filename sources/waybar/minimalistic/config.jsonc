{
    "height": 40,

    "margin-left": 15,
    "margin-right": 15,
    "margin-top": 15,

    "position": "top",
    
    "spacing": 10,

    "modules-left": [
        "memory",
        "network"
    ],

    "modules-center": [
        "hyprland/workspaces"
    ],

    "modules-right": [
        "pulseaudio#output",
        "pulseaudio#input",
        "tray",
        "clock",
        "hyprland/language",
        "custom/notification"
    ],

    "memory": {
        "interval":       1,

        "format":         " {used}/{total} GB",

        "tooltip":        true,
        "tooltip-format": "Available: {avail} GB"
    },

    "network": {
        "interval":                    1,

        "format":                      "{ifname}",

        "format-wifi":                 " {bandwidthDownBytes} | {bandwidthUpBytes}",
        "tooltip-format-wifi":         "Wi-Fi:\n\nSSID: {essid}\nFrequency: {frequency}\nStrength: {signalStrength}\n\nIP: {ipaddr}\nGateway: {gwaddr}\nSubnetmask: {netmask}",

        "format-ethernet":             " {bandwidthDownBytes} | {bandwidthUpBytes}",
        "tooltip-format-ethernet":     "Ethernet:\n\nIP: {ipaddr}\nGateway: {gwaddr}\nSubnetmask: {netmask}",

        "format-disconnected":         "",
        "tooltip-format-disconnected": "Disconnected",

        "max-length":                  1000
    },

    "hyprland/workspaces": {
        "format":         "{icon}",

        "format-icons": {
            "active":     "",
            "urgent":     "",
            "default":    ""
        },
        
        "on-click":       "activate",

        "on-scroll-up":   "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",

        "all-outputs":    true,
        
        "sort-by-number": true
    },

    "pulseaudio#output": {
        "format":                     "{icon} {volume}%",
        "format-muted":               "",
        "format-icons": {
            "default":                ["", "", ""]
        },

        "max-volume":                 200,

        "scroll-step":                5,
        "smooth-scrolling-threshold": 1,
        "on-scroll-down":             "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
        "on-scroll-up":               "wpctl set-volume -l 2.0 @DEFAULT_AUDIO_SINK@ 5%+",

        "on-click":                   "pavucontrol"
    },

    "pulseaudio#input": {
        "format-source":              " {volume}%",
        "format-source-muted":        "",
        "format":                     "{format_source}",

        "max-volume":                 100,

        "scroll-step":                5,
        "smooth-scrolling-threshold": 1,
        "on-scroll-down":             "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%-",
        "on-scroll-up":               "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SOURCE@ 5%+",

        "on-click":                   "pavucontrol"
    },

    "tray": {
        "icon-size": 18,
        "spacing":   10
    },

    "clock": {
        "interval":         1,

        "format":           " {:%H:%M:%S}",

        "tooltip-format":   "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode":         "year",
            "mode-mon-col": 4,

            "weeks-pos":    "right",

            "on-scroll":    1,

            "format": {
                "months":   "<span color='#ffffff'><b>{}</b></span>",
                "days":     "<span color='#8e8e93'><b>{}</b></span>",
                "weeks":    "<span color='#ffffff'><b>W{}</b></span>",
                "weekdays": "<span color='#ffffff'><b>{}</b></span>",
                "today":    "<span color='#0091ff'><b><u>{}</u></b></span>"
            }
        }
    },

    "hyprland/language": {
        "format": "{short}"
    },

    "custom/notification": {
        "tooltip":                        false,

        "format":                         "{icon}",
        "format-icons": {
            "notification":               "<span foreground='#0091ff'></span>",
            "none":                       "",

            "dnd-notification":           "<span foreground='#ff4245'></span>",
            "dnd-none":                   "",

            "inhibited-notification":     "<span foreground='#ffd600'></span>",
            "inhibited-none":             "",

            "dnd-inhibited-notification": "<span foreground='#ff9230'></span>",
            "dnd-inhibited-none":         ""
        },

        "return-type":                    "json",

        "exec-if":                        "which swaync-client",
        "exec":                           "swaync-client -swb",

        "on-click":                       "swaync-client -t -sw",
        "on-click-right":                 "swaync-client -d -sw",

        "escape":                         true
    }
}
